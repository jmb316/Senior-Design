      .col-md-12.col-sm-8
        .panel.panel-default.text-center
          .panel-heading
            span.fa-stack.fa-5x
              i.fa.fa-circle.fa-stack-2x.text-primary
              |                               
              i.glyphicon.glyphicon-shopping-cart.fa-stack-1x.fa-inverse
            |                         
            h2 Requested Items
          |                     
          .panel-body
            // Food LIST
            #foodList
                table.table.table-striped
                    tbody
                        each key in currentUsers
                            tr
                                td
                                    p #{key.newFood}
                                -if(admin)
                                    td
                                        a.linkdeletefood(href='#', rel="#{key._id}") delete?
                    // food LIST
                    // ADD food
            #addFood
                fieldset
                    input#inputChapName.form-control.input-lg(type='hidden', value='#{chapid}')
                fieldset
                        textarea#inputFoodName.form-control.input-lg(type='text', placeholder='New Food Request...')
                        button#btnAddFoods Submit
